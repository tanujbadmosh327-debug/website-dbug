    <script>
        // 3D Sneaker Rotation Controls
        const sneaker3d = document.getElementById('sneaker3d');
        const rotateLeft = document.getElementById('rotate-left');
        const rotateRight = document.getElementById('rotate-right');
        const zoomIn = document.getElementById('zoom-in');
        const zoomOut = document.getElementById('zoom-out');
        
        let rotationY = 0;
        let scale = 1;
        
        rotateLeft.addEventListener('click', () => {
            rotationY -= 45;
            sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
        });
        
        rotateRight.addEventListener('click', () => {
            rotationY += 45;
            sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
        });
        
        zoomIn.addEventListener('click', () => {
            if (scale < 1.5) {
                scale += 0.1;
                sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
            }
        });
        
        zoomOut.addEventListener('click', () => {
            if (scale > 0.5) {
                scale -= 0.1;
                sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
            }
        });

        // Auto-rotate 3D sneaker
        let autoRotateInterval = setInterval(() => {
            rotationY += 0.5;
            sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
        }, 50);

        // Pause auto-rotation on hover
        sneaker3d.parentElement.addEventListener('mouseenter', () => {
            clearInterval(autoRotateInterval);
        });

        sneaker3d.parentElement.addEventListener('mouseleave', () => {
            autoRotateInterval = setInterval(() => {
                rotationY += 0.5;
                sneaker3d.style.transform = `rotateY(${rotationY}deg) scale(${scale})`;
            }, 50);
        });

        // Customizer functionality
        const customSneaker = document.getElementById('customSneaker');
        const options = document.querySelectorAll('.option');
        const colorOptions = document.querySelectorAll('.color-option');
        
        // Set initial color
        customSneaker.style.backgroundColor = '#111';
        
        // Model selection
        options.forEach(option => {
            option.addEventListener('click', function() {
                options.forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
                
                // Change sneaker image based on model
                const model = this.getAttribute('data-model');
                const images = {
                    classic: 'https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
                    runner: 'https://images.unsplash.com/photo-1549298916-b41d501d3772?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
                    'high-top': 'https://images.unsplash.com/photo-1600269452121-4f2416e55c28?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
                    minimal: 'https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
                };
                
                customSneaker.style.backgroundImage = `url('${images[model]}')`;
            });
        });
        
        // Color selection
        colorOptions.forEach(colorOption => {
            colorOption.addEventListener('click', function() {
                const color = this.getAttribute('data-color');
                customSneaker.style.backgroundColor = color;
                
                // Add a subtle animation
                customSneaker.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    customSneaker.style.transform = 'scale(1)';
                }, 200);
            });
        });

        // Add to cart buttons
        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function() {
                const sneakerName = this.parentElement.querySelector('.sneaker-name').textContent;
                const sneakerPrice = this.parentElement.querySelector('.sneaker-price').textContent;
                
                // Animation effect
                this.textContent = 'Added!';
                this.style.backgroundColor = '#2ed573';
                
                setTimeout(() => {
                    this.textContent = 'Add to Cart';
                    this.style.backgroundColor = '';
                }, 2000);
                
                // In a real implementation, you would add to a shopping cart here
                console.log(`Added ${sneakerName} to cart - ${sneakerPrice}`);
            });
        });

        // Mobile menu toggle
        const mobileMenu = document.querySelector('.mobile-menu');
        const nav = document.querySelector('nav ul');
        
        mobileMenu.addEventListener('click', () => {
            nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    if(window.innerWidth <= 768) {
                        nav.style.display = 'none';
                    }
                }
            });
        });

        // Newsletter form submission
        const newsletterForm = document.querySelector('.newsletter-form');
        newsletterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input').value;
            
            // In a real implementation, you would send this to a server
            alert(`Thank you for subscribing with ${email}! You'll receive updates soon.`);
            this.reset();
        });

        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.padding = '15px 5%';
                header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.1)';
            } else {
                header.style.padding = '20px 5%';
                header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.05)';
            }
        });
    </script>
</body>
</html>
